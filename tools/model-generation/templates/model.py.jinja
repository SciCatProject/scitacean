{%- set fields = fields|selectattr("validation", "eq", validation)|list -%}
{% if fields %}

    @pydantic.validator({{ fields|map("attr", "scicat_name")|map("quote")|join(", ") }})
    def _validate_{{ validation }}(cls, value: Any) -> Any:
        return validate_{{ validation }}(value)
{%- endif %}
{%- endfor %}
{% endmacro -%}

